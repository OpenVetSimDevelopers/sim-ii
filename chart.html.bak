<script>

var enabled = 1;
var interval = 0;

$( document ).ready(function() {
	interval = setInterval(drawStrip, 10 );
	$('#stop').click(function(){
		if ( interval != 0 )
		{
			clearInterval(interval );
			interval = 0;
		}
	});
});

var stripWidth = 800;
var stripHeight = 262;
var stripPosition = 0;

var ekgOffsetX = 10;
var ekgHeight = 40;
var ekgOffsetY = 20;
var ekgLastX = -100;
var ekgLastY = -100;

var respOffsetX = 10;
var respHeight = 40;
var respOffsetY = 70;
var respLastX = -100;
var respLastY = -100;

var spOffsetX = 10;
var spHeight = 40;
var spOffsetY = 120;
var spLastX = -100;
var spLastY = -100;

function drawStrip()
{
	var i;
	var x;
	var y;
	var sample;
	var canvas = document.getElementById("strip");
	var ctx = canvas.getContext("2d");
	
	// Clear the current and next two lines
	ctx.fillStyle="black";
	x = stripPosition
	ctx.clearRect(x+ekgOffsetX, ekgOffsetY, 6, stripHeight );
	
	// EKG
	sample = getEkgSample();
	x = stripPosition + ekgOffsetX;
	y = ekgOffsetY + ekgHeight - sample;
	ctx.strokeStyle="red";
	if ( ekgLastX == -100 )
	{
		ctx.fillRect(x,y,1,1);
	}
	else
	{
		ctx.beginPath();
		ctx.moveTo(ekgLastX, ekgLastY );
		ctx.lineTo(x,y);
		ctx.stroke();
	}
	ekgLastX = x;
	ekgLastY = y;

	// Respiration
	sample = getRespSample();
	x = stripPosition + respOffsetX;
	y = respOffsetY + respHeight - sample;
	ctx.strokeStyle="blue";
	if ( respLastX == -100 )
	{
		ctx.fillRect(x,y,1,1);
	}
	else
	{
		ctx.beginPath();
		ctx.moveTo(respLastX, respLastY );
		ctx.lineTo(x,y);
		ctx.stroke();
	}
	respLastX = x;
	respLastY = y;

	// Respiration
	sample = getSpSample();
	x = stripPosition + spOffsetX;
	y = spOffsetY + spHeight - sample;
	ctx.strokeStyle="pink";
	if ( spLastX == -100 )
	{
		ctx.fillRect(x,y,1,1);
	}
	else
	{
		ctx.beginPath();
		ctx.moveTo(spLastX, spLastY );
		ctx.lineTo(x,y);
		ctx.stroke();
	}
	spLastX = x;
	spLastY = y;
	
	stripPosition += 1;
	if ( stripPosition > stripWidth )
	{
		stripPosition = 0;
		ekgLastX = -100;
		respLastX = -100;
		spLastX = -100;
	}
}
</script>
